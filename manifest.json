{
  "manifest_version": 2,

  "name": "clippy",
  "description": "Clippy MS Word Office assistant is now back to assist inside your browser!",
  "version": "1.0",
  "author": "Ante BariÄ‡ (capJavert)",

  "icons": {
    "48": "favicon.ico"
  },
  "browser_action": {
    "default_title": "Clippy Assistant",
    "default_icon": {
      "19":"favicon-16x16.png",
      "20":"favicon-16x16.png",
      "38":"favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/index.js"
      ],
      "css": [
        "src/assets/css/clippy.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "src/assets/js/state.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "src/assets/img/clippy.png"
  ],
  "permissions": [
    "activeTab"
  ]
}