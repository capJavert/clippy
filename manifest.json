{
  "manifest_version": 2,

  "name": "clippy",
  "description": "Clippy MS Word Office assistant is now back to assist inside your browser!",
  "version": "1.0",
  "author": "Ante BariÄ‡ (capJavert)",
  "icons": {
    "16": "src/assets/img/clippy-icon-16x16.png",
    "48": "src/assets/img/clippy-icon-48x48.png",
    "128": "src/assets/img/clippy-icon-128x128.png"
  },
  "browser_action": {
    "default_title": "Clippy Assistant",
    "default_icon": {
      "16": "src/assets/img/clippy-icon-48x48.png",
      "24": "src/assets/img/clippy-icon-48x48.png",
      "32": "src/assets/img/clippy-icon-48x48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/index.js"
      ],
      "css": [
        "src/assets/css/clippy.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "src/assets/js/state.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "src/assets/img/clippy.png"
  ],
  "permissions": [
    "activeTab"
  ]
}