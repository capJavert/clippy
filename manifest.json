{
  "manifest_version": 2,

  "name": "clippy-office-word-assistant",
  "description": "Clippy MS Word Office asistant is now back to help inside your browser!",
  "version": "1.0",
  "author": "Ante BariÄ‡ (capJavert)",

  "icons": {
    "48": "favicon.ico"
  },
  "browser_action": {
    "default_title": "Clippy Assistant",
    "default_icon": {
      "19":"favicon-16x16.png",
      "20":"favicon-16x16.png",
      "38":"favicon.ico"
    },
    "default_popup": "dashboard.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/index.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["assets/*"],
  "permissions": [
    "activeTab"
  ]
}