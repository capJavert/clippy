    "license": "MIT",
    "bugs": {
        "url": "https://github.com/capJavert/clippy/issues"
    },
    "homepage": "https://github.com/capJavert/clippy#readme",
    "devDependencies": {
        "eslint": "^6.2.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.4",
        "jest": "^24.9.0",
        "web-ext": "^2.9.3"
    },
    "husky": {
